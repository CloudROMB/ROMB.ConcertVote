  function rotateCard(btn) {
    var $card = $(btn).closest('.card-container');
    // console.log($card);
    if ($card.hasClass('hover')) {
      $card.removeClass('hover');
    } else {
      $card.addClass('hover');
    }
  }

  function showNotification(message, type) {
    var types = ['', 'info', 'success', 'warning', 'danger', 'rose', 'primary'];
    var from = 'bottom';
    var align = 'left';

    $.notify({
      icon: "notifications",
      message: message
    }, {
      type: type || 'danger',
      timer: 3000,
      placement: {
        from: from,
        align: align
      }
    });
  }
